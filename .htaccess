# ===================================================================
# .htaccess Configuration File
# المعهد المصري لأكاديمية الإسكندرية للإدارة والمحاسبة
# تحسين الأداء والأمان وتحسين محركات البحث
# ===================================================================

# ===================================================================
# SECURITY HEADERS - رؤوس الأمان
# ===================================================================

<IfModule mod_headers.c>
    # منع تضمين الموقع في إطارات خارجية (Clickjacking Protection)
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # منع تشغيل المحتوى كنوع MIME مختلف
    Header always set X-Content-Type-Options "nosniff"
    
    # تفعيل حماية XSS في المتصفحات
    Header always set X-XSS-Protection "1; mode=block"
    
    # سياسة أمان المحتوى (Content Security Policy)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com https://cdn.jsdelivr.net; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-src 'self' https://www.google.com;"
    
    # سياسة المرجع (Referrer Policy)
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # سياسة الأذونات (Permissions Policy)
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()"
    
    # إزالة معلومات الخادم
    Header always unset Server
    Header always unset X-Powered-By
    
    # تفعيل HSTS (HTTP Strict Transport Security)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ===================================================================
# GZIP COMPRESSION - ضغط الملفات
# ===================================================================

<IfModule mod_deflate.c>
    # تفعيل الضغط للملفات النصية
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE font/truetype
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font-ttf
    
    # إعدادات إضافية للضغط
    DeflateCompressionLevel 6
    DeflateMemLevel 9
    DeflateWindowSize 15
</IfModule>

# ===================================================================
# BROWSER CACHING - التخزين المؤقت في المتصفح
# ===================================================================

<IfModule mod_expires.c>
    ExpiresActive On
    
    # الصور
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # الخطوط
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # CSS و JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
    
    # XML و JSON
    ExpiresByType application/xml "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    
    # الملفات الافتراضية
    ExpiresDefault "access plus 1 week"
</IfModule>

# ===================================================================
# CACHE CONTROL HEADERS - رؤوس التحكم في التخزين المؤقت
# ===================================================================

<IfModule mod_headers.c>
    # الصور والخطوط
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|ttf|otf|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS و JavaScript
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # منع التخزين المؤقت للملفات الحساسة
    <FilesMatch "\.(php|cgi|pl|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# ===================================================================
# URL REWRITING - إعادة كتابة الروابط
# ===================================================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # إعادة توجيه HTTP إلى HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # إعادة توجيه www إلى non-www (أو العكس حسب التفضيل)
    RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # إزالة .html من الروابط
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.html [NC,L]
    
    # إعادة توجيه الملفات مع .html إلى بدونها
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [NC,L,R=301]
    
    # الصفحة الرئيسية
    RewriteRule ^$ index.html [L]
    
    # معالجة الأخطاء 404
    ErrorDocument 404 /404.html
    ErrorDocument 403 /403.html
    ErrorDocument 500 /500.html
</IfModule>

# ===================================================================
# FILE PROTECTION - حماية الملفات
# ===================================================================

# منع الوصول للملفات الحساسة
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# حماية ملفات النظام
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# منع تصفح المجلدات
Options -Indexes

# منع تنفيذ PHP في مجلدات التحميل
<Directory "uploads">
    php_flag engine off
</Directory>

# ===================================================================
# MIME TYPES - أنواع الملفات
# ===================================================================

<IfModule mod_mime.c>
    # الخطوط
    AddType application/font-woff .woff
    AddType application/font-woff2 .woff2
    AddType application/vnd.ms-fontobject .eot
    AddType font/truetype .ttf
    AddType font/opentype .otf
    
    # الصور الحديثة
    AddType image/webp .webp
    AddType image/avif .avif
    
    # ملفات أخرى
    AddType application/json .json
    AddType application/ld+json .jsonld
    AddType application/manifest+json .webmanifest
    AddType text/cache-manifest .appcache
</IfModule>

# ===================================================================
# PERFORMANCE OPTIMIZATION - تحسين الأداء
# ===================================================================

# تفعيل KeepAlive
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# تحسين ETags
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# منع hotlinking للصور
<IfModule mod_rewrite.c>
    RewriteEngine on
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?egyptian-institute-alexandria\.edu\.eg [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?google\. [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?bing\. [NC]
    RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yahoo\. [NC]
    RewriteRule \.(jpg|jpeg|png|gif|webp|svg)$ - [F,NC]
</IfModule>

# ===================================================================
# SEO OPTIMIZATION - تحسين محركات البحث
# ===================================================================

# إعادة توجيه الصفحات المكررة
<IfModule mod_rewrite.c>
    # إعادة توجيه index.php إلى الجذر
    RewriteCond %{THE_REQUEST} /index\.php [NC]
    RewriteRule ^index\.php$ / [R=301,L]
    
    # إعادة توجيه index.html إلى الجذر
    RewriteCond %{THE_REQUEST} /index\.html [NC]
    RewriteRule ^index\.html$ / [R=301,L]
</IfModule>

# ===================================================================
# ADDITIONAL SECURITY MEASURES - إجراءات أمان إضافية
# ===================================================================

# منع الوصول للملفات الاحتياطية
<FilesMatch "\.(bak|backup|old|orig|original|tmp|temp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# منع تنفيذ السكريبت في مجلدات معينة
<Directory "images">
    <FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

# حد أقصى لحجم الطلب
LimitRequestBody 10485760

# منع User Agents المشبوهة
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^(java|curl|wget) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} (winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# ===================================================================
# MOBILE OPTIMIZATION - تحسين للهواتف المحمولة
# ===================================================================

<IfModule mod_headers.c>
    # تحسين للشاشات عالية الدقة
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        Header append Vary Accept
    </FilesMatch>
</IfModule>

# ===================================================================
# CHARSET AND LANGUAGE - الترميز واللغة
# ===================================================================

# تعيين الترميز الافتراضي
AddDefaultCharset UTF-8

# تعيين اللغة الافتراضية
DefaultLanguage ar

# ===================================================================
# END OF CONFIGURATION
# ===================================================================

